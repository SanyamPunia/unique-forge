{
  "name": "unique-forge",
  "version": "1.6.0",
  "description": "A flexible and powerful unique ID generator",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SanyamPunia/unique-forge"
  },
  "scripts": {
    "lint": "eslint .",
    "build": "rollup -c",
    "test": "jest",
    "format": "prettier --write 'src/**/*.ts'",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "id",
    "generator",
    "unique",
    "nanoid",
    "uuid"
  ],
  "author": "Sanyam",
  "license": "ISC",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "rollup": "^4.28.0",
    "ts-jest": "^29.2.5",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0"
  }
